<div class='card'>
  {{#each this}}
    <div class='card-top-info'>
      <img src='{{flags.svg}}' alt='' width='120px' />
      <h2 class='card-title'>{{name.official}}</h2>
    </div>
    <p class='card-text'><b>Capital:</b> {{capital}}</p>
    <p class='card-text'><b>Population:</b> {{population}}</p>
    <p class='card-text'><b>Languages:</b>
      {{#each languages}}{{#if @index}},{{/if}}
        {{this}}
      {{/each}}</p>

  {{/each}}
</div>